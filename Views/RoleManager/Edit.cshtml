@model EditRoleViewModel

@{
    ViewData["Title"] = "Manage Role";
    ViewData["ActivePage"] = "ManageRoles";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="panel panel-bd ">
                    <div class="panel-heading">
                        <div class="btn-group" id="buttonlist">
                            Manage Role
                        </div>
                    </div>
                    <div class="panel-body">

                        <div class="btn-group btn-group">
                            <a class="btn btn-primary" style="with:auto" asp-controller="RoleManager"
                                asp-action="Create">Add new role </a>
                        </div>  

                        <form method="post" class="mt-3">
                            <div class="form-group row">
                                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input asp-for="Id" disabled class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input asp-for="RoleName" class="form-control" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                            </div>

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-success">Update</button>
                                    <a asp-area="" asp-action="Index" asp-controller="RoleManager"
                                        class="btn btn-primary">Cancel</a>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h3 class="black">Users in this role</h3>
                                </div>
                                <div class="card-body">
                                    @if (Model.Users.Any())
                                    {
                                        foreach (var user in Model.Users)
                                        {
                                            <h5 class="card-title black">@user</h5>
                                        }
                                    }
                                    else
                                    {
                                        <h5 class="card-title black">None at the moment</h5>
                                    }
                                </div>
                                <div class="card-footer">
                                    <a asp-area="" asp-action="EditUsersInRole" asp-controller="RoleManager"
                                        asp-route-roleId="@Model.Id" class="btn btn-success"
                                        style="with:auto">Add or remove users</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
